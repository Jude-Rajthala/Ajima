{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach by Process ID",
        "processId": "${command:PickProcess}",
        "request": "attach",
        "skipFiles": ["<node_internals>/**"],
        "type": "node"
      },
      {
        "name": "Attach",
        "port": 9229,
        "request": "attach",
        "skipFiles": ["<node_internals>/**"],
        "type": "node"
      },
      {
        "name": "Launch Edge",
        "request": "launch",
        "type": "msedge",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
      },
      {
        "name": "Attach to Edge",
        "port": 9222,
        "request": "attach",
        "type": "msedge",
        "webRoot": "${workspaceFolder}"
      },
      {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "runtimeExecutable": "chrome"
      }
    ]
  }
  